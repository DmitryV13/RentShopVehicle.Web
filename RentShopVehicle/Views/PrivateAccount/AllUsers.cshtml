
@{
    Layout = "~/Views/Shared/_Office.cshtml";
    ViewBag.Title = "AllUsers";
}
@model RentShopVehicle.Models.UsersInfo

<div class="bg-light rounded h-100 p-4">
    <h3 class="mb-4">All users</h3>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Account state</th>
                    <th scope="col">Login histories</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.userInfos)
                {
                    <tr>
                        <th>@user.Id</th>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.UserRole.ToString()</td>
                        <td>@user.AccountState</td>
                        <td>
                            @foreach (var hist in user.LoginHistories)
                            {
                                <div>IP: @hist.LoginIP</div>
                                <div>Entry Date: @hist.LastEntry</div>
                            }
                        </td>
                        <td><a href="@Url.Action("", "", new { Id = user.Id })"><div class="btn btn-success">More info</div></a></td>
                        <td><a href="@Url.Action("BlockUser", "PrivateAccount", new { Id = user.Id })"><div class="btn btn-warning">Block</div></a></td>
                        <td><a href="@Url.Action("UnblockUser", "PrivateAccount", new { Id = user.Id })"><div class="btn btn-warning">Unblock</div></a></td>
                        <td><a href="@Url.Action("DeleteUser", "PrivateAccount", new { Id = user.Id })"><div class="btn btn-danger">Delete</div></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

