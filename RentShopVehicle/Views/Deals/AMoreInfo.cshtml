
@{
    Layout = "~/Views/Shared/_Office.cshtml";
    ViewBag.Title = "AMoreInfo";
}
@model RentShopVehicle.Models.AnnouncementDetInfo

<div class="bg-light rounded h-100 p-4">
    <h3 class="mb-4">Announcement - @Model.Id</h3>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Property</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AnnouncementConnectors)
                {
                    <tr>
                        <th>@item.ConnectorId</th>
                        <td>Car</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

