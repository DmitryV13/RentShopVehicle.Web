
@{
    Layout = "~/Views/Shared/_Office.cshtml";
    ViewBag.Title = "AnnouncementMoreInfo";
}
@model RentShopVehicle.Models.AnnouncementDetInfo

<div class="bg-light rounded h-100 p-4">
    <h3 class="mb-4">Announcement - @Model.Id</h3>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Property</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Make</th>
                    <td>@Model.Make</td>
                </tr>
                <tr>
                    <th>Model</th>
                    <td>@Model.Model</td>
                </tr>
                <tr>
                    <th>Year</th>
                    <td>@Model.Year</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>@Model.Color</td>
                </tr>
                <tr>
                    <th>VIN</th>
                    <td>@Model.VIN</td>
                </tr>
                <tr>
                    <th>Transmission</th>
                    <td>@Model.Transmission</td>
                </tr>
                <tr>
                    <th>Mileage</th>
                    <td>@Model.Mileage</td>
                </tr>
                <tr>
                    <th>Horse Power</th>
                    <td>@Model.HP</td>
                </tr>
                <tr>
                    <th>Images</th>
                    <td>
                        @foreach (var url in Model.ImageUrls)
                        {
                            <img src="@url" alt="Photo" />
                        }
                    </td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>@Model.Price</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

