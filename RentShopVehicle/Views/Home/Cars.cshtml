                        @using (Html.BeginForm("", "", FormMethod.Post, new { autocomplete = "off" }))
                        {

                            var makeList = Enum.GetValues(typeof(RentShopVehicle.Domain.Enums.Make))
                            .Cast<RentShopVehicle.Domain.Enums.Make>
                                ()
                                .Select(e => new SelectListItem
                                {
                                    Value = e.ToString(),
                                    Text = e.ToString()
                                });

                            <select aria-label="Make" name="Make">
                                <option data-display="Brand">Select Brand</option>
                                @foreach (var item in makeList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>

                            var transList = Enum.GetValues(typeof(RentShopVehicle.Domain.Enums.Transmission))
                            .Cast<RentShopVehicle.Domain.Enums.Transmission>
                                ()
                                .Select(e => new SelectListItem
                                {
                                    Value = e.ToString(),
                                    Text = e.ToString()
                                });

                            <select aria-label="Transmisson" name="Transmisson">
                                <option data-display="Transmisson">Select Transmisson</option>
                                @foreach (var item in transList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <input type="number" placeholder="Mileage">
                            <input type="text" placeholder="Color">
                            <div class="filter-price">
                                <p>Price:</p>
                                <div class="price-range-wrap">
                                    <div class="filter-price-range"></div>
                                    <div class="range-slider">
                                        <div class="price-input">
                                            <input type="text" id="filterAmount">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="car__filter__btn">
                                <button type="submit" class="site-btn">Apply FIlter</button>
                            </div>
                        }
